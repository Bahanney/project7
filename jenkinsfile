pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/Bahanney/project7.git'
            }
        }

        stage('Install MySQL & Setup Users') {
            steps {
                sh 'ansible-playbook -i hosts.ini playbook.yml'
            }
        }

        stage('Run Python Script') {
            steps {
                sh 'python3 log_system_stats.py'
            }
        }
    }
}
